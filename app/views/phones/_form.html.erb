
<%= simple_form_for(@phone) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :model %>
    <%= f.input :brand %>
    <%= f.input :manufacturer %>
    <%= f.input :chip_type %>
    <%= f.input :so_version %>
    <%= f.input :screen_type %>
    <%= f.input :display_size %>
    <%= f.input :resolution %>
    <%= f.input :back_cam %>
    <%= f.input :front_cam %>
    <%= f.input :ram %>
    <%= f.input :processor %>
    <%= f.input :memory_int %>
    <%= f.input :color %>
    <%= f.input :modaly %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.association :phone_arquivos %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
